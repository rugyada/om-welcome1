#!/bin/sh
if ! [ -e "/home/$USER/.om-welcome" ]; then
	touch ~/.om-welcome
	echo 'autostart=1' > ~/.om-welcome
fi

source ~/.om-welcome

#read if autostart?
if [ "$autostart" -eq 1 ]; then
	cd /usr/share/om-welcome/
	exec htmlscript -s 1020x600 -i /usr/share/icons/openmandriva.svg -t "OM Welcome" index.sh.htm
fi
